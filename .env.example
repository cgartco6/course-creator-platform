# Application Environment
NODE_ENV=development
APP_NAME=CourseCreator AI
APP_VERSION=1.0.0

# Server Configuration
PORT=5000
FRONTEND_URL=http://localhost:3000
API_URL=http://localhost:5000/api
CORS_ORIGIN=http://localhost:3000

# Database
MONGODB_URI=mongodb://localhost:27017/coursecreator
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_here_change_in_production
JWT_EXPIRE=30d
JWT_REFRESH_SECRET=your_refresh_token_secret_key
JWT_REFRESH_EXPIRE=90d

# Cloudinary (File Storage)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORG_ID=your_organization_id_optional

# Email Service (Optional)
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password
EMAIL_FROM=CourseCreator AI <noreply@coursecreator.com>

# Payment (Optional)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=your_ga_id
MIXPANEL_TOKEN=your_mixpanel_token

# AI Course Generation Settings
AI_MAX_COURSES_PER_DAY=50
AI_DEFAULT_CREATIVITY=7
AI_DEFAULT_DEPTH=8
AI_RATE_LIMIT_PER_HOUR=100

# File Upload Limits
MAX_FILE_SIZE=52428800
MAX_IMAGE_SIZE=10485760
MAX_VIDEO_SIZE=536870912

# Cache Configuration
CACHE_TTL=3600
CACHE_CHECK_PERIOD=600
